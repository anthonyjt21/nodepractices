extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/product.css")

block content 
    main 
        if prods.length >0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header
                            h1.product__title #{product.title} 
                        div.card__image 
                            img(src="https://i.picsum.photos/id/866/200/300.jpg?hmac=rcadCENKh4rD6MAp6V_ma-AyWv641M4iiOpe1RyFHeI" alt="A Book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very insteresting book about so many even more
                        .card__actions
                            button.btn Add to Cart 
        else 
            h1 No products